{
    "settings": {
        "import/resolver": {
          "typescript": {}
        },
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        }        
    },
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "lines-between-class-members": ["error", "never"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never",
                "mjs": "never"
            }
          ],
        "no-console": "off",
        "class-methods-use-this": 0
    }
}
